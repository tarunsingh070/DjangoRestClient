<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
    </style>

    <style name="ScreenLabelsStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="ScreenLabelsStyle.RequestScreenLabelsStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ScreenLabelsStyle.AddHeaderDialogLabelsStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/layout_rounded_bg</item>
    </style>

    <style name="HeaderRowTextViewStyle">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
